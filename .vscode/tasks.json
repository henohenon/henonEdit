// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "watch",
            "dependsOn": [
                "pnpm: watch:tsc",
                "pnpm: watch:esbuild"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "watch:esbuild"
            ],
            "group": "build",
            "isBackground": true,
            "label": "pnpm: watch:esbuild",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
		{
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "watch:tsc"
            ],
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "label": "pnpm: watch:tsc",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        }
	]
}
